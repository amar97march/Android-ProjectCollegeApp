<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amar97march.projectcollege.TeacherLogin"
    android:fitsSystemWindows="true"
    android:background="@android:color/holo_red_dark">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:src="@drawable/logoteacher"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/logoteacher" />

        <!--Email Label-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/teacherEmail"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:hint="@string/email"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif"
            android:textColor="?android:attr/colorLongPressedHighlight"
            android:textColorHint="@android:color/background_light" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="@string/password"
            android:id="@+id/teacherPass"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:textColor="@android:color/white"
            android:selectAllOnFocus="false"
            android:textStyle="normal|bold"
            android:textColorHint="@android:color/background_light" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login_teacher"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="@string/login"
            android:textColor="@android:color/background_light"
            android:background="@color/fab_stroke_top_outer_color"
            android:textAlignment="center" />

        <Button
            android:text="@string/teachersignupinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_signup_teacher"
            android:background="@android:drawable/list_selector_background"
            android:textColorHint="@android:color/background_light"
            android:textColor="@android:color/background_light" />


    </LinearLayout>

</ScrollView>
