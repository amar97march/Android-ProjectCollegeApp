<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amar97march.projectcollege.MainActivity"
    android:background="@drawable/walllogin">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        app:srcCompat="@android:color/darker_gray"
        android:id="@+id/imageView4"
        android:background="@android:color/transparent"
        android:alpha=".4"
        android:adjustViewBounds="false"
        android:layout_alignParentStart="false"
        android:cropToPadding="false"
        android:maxHeight="500dp"
        android:maxWidth="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/login"
        android:id="@+id/imageView3"
        android:layout_marginTop="66dp"
        android:background="@android:color/transparent"
        android:layout_width="200dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btnT"
        android:background="@drawable/loginteacher"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btnS"
        android:background="@drawable/loginstudent1"
        android:layout_below="@+id/btnT"
        android:layout_alignStart="@+id/btnT"
        android:layout_marginTop="24dp" />

</RelativeLayout>
